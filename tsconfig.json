{
	"compilerOptions": {
		"target": "ESNext",
		"jsx": "react-jsx",
		"module": "Node16",
		"moduleResolution": "node16",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"types": ["react", "react-dom"],
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@/lib/*": ["lib/*"]
		}
	},
	"include": ["src", "lib"]
}
