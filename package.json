{
	"name": "secret-lib",
	"version": "0.1.11",
	"license": "MIT",
	"author": "Matheus Boeira <matheusb_dias@hotmail.com>",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/matheusboeira/secret-lib.git"
	},
	"publishConfig": {
		"access": "public"
	},
	"keywords": ["react", "hooks", "components", "tailwindcss"],
	"main": "dist/index.cjs",
	"types": "dist/index.d.ts",
	"files": ["dist", "README.md", "LICENSE"],
	"sideEffects": false,
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.cjs"
		}
	},
	"scripts": {
		"build": "vite build && tsc --emitDeclarationOnly --declaration --declarationDir dist --project tsconfig.build.json",
		"prepublish": "npm run build",
		"publish:major": "npm version major && npm publish --access public",
		"publish:minor": "npm version minor && npm publish --access public",
		"publish:patch": "npm version patch && npm publish --access public",
		"dev": "vite"
	},
	"peerDependencies": {
		"react": "^18.0.0",
		"react-dom": "^18.0.0",
		"tailwindcss": "^3.4.17",
		"clsx": "^2.0.0",
		"tailwind-merge": "^3.2.0"
	},
	"dependencies": {
		"zustand": "^5.0.3"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/lodash": "^4.17.16",
		"@types/react": "^19.1.0",
		"@types/react-dom": "^19.1.2",
		"@vitejs/plugin-react": "^4.0.0",
		"autoprefixer": "^10.0.0",
		"postcss": "^8.0.0",
		"react-scan": "^0.3.3",
		"typescript": "^5.0.0",
		"vite": "^6.2.6",
		"vite-tsconfig-paths": "^5.1.4"
	}
}
